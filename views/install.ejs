	<body>
		<div class="container">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>Installation</h3>	
				</div>
				<div class="panel-body">
					<div class="result">test</div>
					<a href="/gallery">Retourner à la galerie</a>
				</div>
			</div>
		</div>
	</body>
	<script>
		$(function(){
			var string = "";	
			if(getUrlVars()["Result"]===0){
				string = "Installation réussie : ";
			}
			else{
				string = "Installation échouée : ";
			}
			string += getUrlVars()["reason"];
			// alert(getUrlVars()["reason"]);
			$(".result").text(string);
			// $(".result").val("test");	
			// alert($(".result").val());	
		});

		function getUrlVars()
		{
		    var vars = [], hash;
		    var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
		    for(var i = 0; i < hashes.length; i++)
		    {
		        hash = hashes[i].split('=');
		        vars.push(hash[0]);
		        vars[hash[0]] = hash[1];
		    }
		    return vars;
		}
	</script>
